<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro"
    android:layout_gravity="center"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:text="¡Registrate para poder escuchar tu música favorita!"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#1DB954" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:textColor="#1DB954"
        android:text="Ingrese su nombre"
        android:textStyle="bold"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/idNombre"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/black"
        android:padding="10dp"
        android:hint="Nombre"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:textColor="#1DB954"
        android:text="Ingrese su apellido"
        android:textStyle="bold"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/idApellido"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/black"
        android:padding="10dp"
        android:textColor="@color/white"
        android:hint="Apellido"
        android:textColorHint="@color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:textColor="#1DB954"
        android:text="Ingrese su correo electronico"
        android:textStyle="bold"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/idEmail"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/black"
        android:padding="10dp"
        android:textColor="@color/white"
        android:hint="Correo electronico"
        android:textColorHint="@color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:textColor="#1DB954"
        android:text="Ingrese su fecha de nacimiento"
        android:textStyle="bold"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/idFecha"
        android:inputType="none"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/black"
        android:padding="10dp"
        android:hint="Fecha de nacimiento"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:focusable="false"
        android:clickable="true" />

    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1DB954"
        android:text="Continuar"
        android:textSize="18sp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />

</LinearLayout>

