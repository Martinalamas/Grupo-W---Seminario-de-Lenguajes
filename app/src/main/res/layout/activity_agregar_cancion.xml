<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".AgregarCancion"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAtras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:title="Atras"
        app:titleTextColor="@color/white" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¡Agrega tus canciones favoritas a tu playlist!"
        android:textSize="20sp"
        android:textColor="#1DB954"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="32dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar cancion"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp" />

    <EditText
        android:id="@+id/idCancion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Nombre de cancion"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresar artista"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/idArtista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Nombre de cancion"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnAgregar"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_gravity="center"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/spotify_green"
        android:text="AGREGAR"
        android:textSize="18dp"
        android:textColor="@color/white" />


</LinearLayout>