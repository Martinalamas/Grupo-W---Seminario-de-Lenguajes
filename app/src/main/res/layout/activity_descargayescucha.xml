<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescargaYEscuchaActivity"
    android:background="@color/black"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAtras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:title="Atras"
        app:titleTextColor="@color/white"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logospotify"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/spotify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tituloSonando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estoy escuchando..."
        android:textSize="25sp"
        android:textColor="#1DB954"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logospotify"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/musicaSonando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Musica sonando"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloSonando"/>

    <View
        android:id="@+id/separador1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1DB954"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/musicaSonando"/>

    <TextView
        android:id="@+id/tituloDescarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descarga..."
        android:textSize="25sp"
        android:textColor="#1DB954"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separador1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/musicaDescarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="Informacion descarga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloDescarga"/>

    <View
        android:id="@+id/separador2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1DB954"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/musicaDescarga"/>

    <LinearLayout
        android:id="@+id/linearLayoutBotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/botonSonar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#1DB954"
            android:text="Iniciar Cancion" />

        <Button
            android:id="@+id/botonDescargar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Iniciar Descarga"
            android:layout_weight="1"
            android:backgroundTint="#1DB954"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>